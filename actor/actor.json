{
  "actorSpecification": 1,
  "name": "ai-tools-harvester",
  "title": "AI Tools Harvester",
  "version": "1.0.0",
  "storages": {
    "dataset": {
      "actorSpecification": 1,
      "fields": {
        "name": { "type": "string", "title": "Tool Name" },
        "website": { "type": "string", "title": "Website", "format": "uri" },
        "category": { "type": "string", "title": "Category" },
        "score": { "type": "number", "title": "Relevance Score" }
      },
      "views": {
        "overview": {
          "title": "AI Tools Overview",
          "transformation": {
            "fields": ["name","website","category","score"]
          },
          "display": {
            "component": "table",
            "properties": {
              "name": { "label": "Tool Name", "format": "text" },
              "website": { "label": "Website", "format": "link" },
              "category": { "label": "Category", "format": "text" },
              "score": { "label": "Relevance Score", "format": "number" }
            }
          }
        }
      }
    }
  }
}
