{
  "title": "AI Tools Harvester Dataset",
  "description": "Each item represents a discovered AI tool",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Tool name"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "website": {
      "type": "string",
      "title": "Website",
      "format": "uri"
    },
    "category": {
      "type": "string",
      "title": "Category"
    },
    "score": {
      "type": "number",
      "title": "Relevance score"
    }
  },
  "required": ["name", "website"]
}
